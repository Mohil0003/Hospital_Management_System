@model Hospital_Management_System.Models.DoctorDepartmentModel

@{
    ViewData["Title"] = Model.DoctorDepartmentID == null ? "Add Doctor-Department" : "Edit Doctor-Department";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white fw-bold">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="SaveDoctorDepartment" asp-controller="DoctorDepartment" method="post" novalidate>
                <input type="hidden" asp-for="DoctorDepartmentID" />

                <div class="mb-3">
                    <label asp-for="DoctorID" class="form-label fw-bold">Doctor</label>
                    <select asp-for="DoctorID" asp-items="ViewBag.DoctorList" class="form-select">
                        <option value="">-- Select Doctor --</option>
                    </select>
                    <span asp-validation-for="DoctorID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DepartmentID" class="form-label fw-bold">Department</label>
                    <select asp-for="DepartmentID" asp-items="ViewBag.DepartmentList" class="form-select">
                        <option value="">-- Select Department --</option>
                    </select>
                    <span asp-validation-for="DepartmentID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-bold">Created By (User)</label>
                    <select asp-for="UserID" asp-items="ViewBag.UserList" class="form-select">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Modified" value="@DateTime.Now" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        @(Model.DoctorDepartmentID == null ? "Add Mapping" : "Update Mapping")
                    </button>
                    <a asp-action="DoctorDepartmentList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
