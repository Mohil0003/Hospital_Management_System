<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container py-5">
    <!-- Hospital Header -->
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-primary">CityCare Hospital</h1>
        <p class="lead text-muted fst-italic">"Healing Hands, Caring Hearts."</p>
        <hr class="w-25 mx-auto">
    </div>

    <!-- Stylish Dashboard Cards -->
    <div class="row g-4 justify-content-center">
        <!-- (Your cards here - same as before with Users, Doctors, Patients, etc.) -->
        <!-- Example Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-people-fill fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Total Users</h6>
                    <h3 class="mb-0 fw-semibold">128</h3>
                </div>
            </div>
        </div>
        <!-- Card 2 -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-person-badge-fill fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Doctors</h6>
                    <h3 class="mb-0 fw-semibold">26</h3>
                </div>
            </div>
        </div>

        <!-- Card 3 -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-info text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-person-hearts fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Patients</h6>
                    <h3 class="mb-0 fw-semibold">310</h3>
                </div>
            </div>
        </div>

        <!-- Card 4 -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-warning text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-calendar-check-fill fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Appointments</h6>
                    <h3 class="mb-0 fw-semibold">72</h3>
                </div>
            </div>
        </div>

        <!-- Card 5: Departments -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-hospital fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Departments</h6>
                    <h3 class="mb-0 fw-semibold">12</h3>
                </div>
            </div>
        </div>

        <!-- Card 6: Revenue -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-dark text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-currency-rupee fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Revenue</h6>
                    <h3 class="mb-0 fw-semibold">₹ 4.8M</h3>
                </div>
            </div>
        </div>

        <!-- Card 7: Reports -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-bar-chart-line-fill fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Reports</h6>
                    <h3 class="mb-0 fw-semibold">45</h3>
                </div>
            </div>
        </div>

        <!-- Card 8: Active Beds -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-primary-subtle text-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-hospital-fill fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Active Beds</h6>
                    <h3 class="mb-0 fw-semibold">87 / 100</h3>
                </div>
            </div>
        </div>

        <!-- Card 9: Staff Members -->
        <div class="col-md-6 col-lg-4">
            <div class="card shadow rounded-4 p-3 border-0 d-flex flex-row align-items-center">
                <div class="icon-box bg-info-subtle text-dark rounded-circle d-flex align-items-center justify-content-center me-3" style="width:70px; height:70px;">
                    <i class="bi bi-person-gear fs-3"></i>
                </div>
                <div>
                    <h6 class="mb-1 text-muted">Staff Members</h6>
                    <h3 class="mb-0 fw-semibold">58</h3>
                </div>
            </div>
        </div>
      
    </div>

    <!-- Charts Section -->
    <div class="row mt-4">
        <!-- Line Chart -->
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm rounded-4 p-2">
                <h6 class="fw-bold text-primary mb-2">📈 Patients Growth (Monthly)</h6>
                <canvas id="patientsChart" style="height:250px;"></canvas>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-lg-6 mb-3">
            <div class="card shadow-sm rounded-4 p-2">
                <h6 class="fw-bold text-success mb-2">🩺 Appointments by Department</h6>
                <canvas id="appointmentsChart" style="height:250px;"></canvas>
            </div>
        </div>

        <!-- Bar Chart -->
        <div class="col-lg-12 mb-3">
            <div class="card shadow-sm rounded-4 p-2">
                <h6 class="fw-bold text-warning mb-2">💰 Revenue Analysis (Quarterly)</h6>
                <canvas id="revenueChart" style="height:280px;"></canvas>
            </div>
        </div>
    </div>

</div>

<script>
    // Line Chart - Patients Growth
    const ctx1 = document.getElementById('patientsChart').getContext('2d');
    new Chart(ctx1, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
            datasets: [{
                label: 'Patients',
                data: [50, 80, 120, 150, 200, 250],
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.2)',
                fill: true,
                tension: 0.3
            }]
        },
        options: { responsive: true }
    });

    // Pie Chart - Appointments by Department
    const ctx2 = document.getElementById('appointmentsChart').getContext('2d');
    new Chart(ctx2, {
        type: 'pie',
        data: {
            labels: ['Cardiology', 'Neurology', 'Orthopedics', 'Pediatrics', 'General'],
            datasets: [{
                data: [30, 15, 20, 25, 10],
                backgroundColor: ['#0d6efd', '#198754', '#ffc107', '#dc3545', '#6f42c1']
            }]
        },
        options: { responsive: true }
    });

    // Bar Chart - Revenue Analysis
    const ctx3 = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx3, {
        type: 'bar',
        data: {
            labels: ['Q1', 'Q2', 'Q3', 'Q4'],
            datasets: [{
                label: 'Revenue (₹ in lakhs)',
                data: [120, 150, 180, 210],
                backgroundColor: ['#0d6efd', '#198754', '#ffc107', '#dc3545']
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
</script>
