@model Hospital_Management_System.Models.AppointmentModel

@{
    ViewData["Title"] = Model.AppointmentID == null ? "Add Appointment" : "Edit Appointment";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white fw-bold">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="SaveAppointment" asp-controller="Appointment" method="post" novalidate>
                <input type="hidden" asp-for="AppointmentID" />

                <div class="mb-3">
                    <label asp-for="DoctorID" class="form-label fw-bold">Doctor</label>
                    <select asp-for="DoctorID" asp-items="ViewBag.DoctorList" class="form-select">
                        <option value="">-- Select Doctor --</option>
                    </select>
                    <span asp-validation-for="DoctorID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PatientID" class="form-label fw-bold">Patient</label>
                    <select asp-for="PatientID" asp-items="ViewBag.PatientList" class="form-select">
                        <option value="">-- Select Patient --</option>
                    </select>
                    <span asp-validation-for="PatientID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AppointmentDate" class="form-label fw-bold">Appointment Date</label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AppointmentStatus" class="form-label fw-bold">Status</label>
                    <input asp-for="AppointmentStatus" class="form-control" placeholder="e.g., Scheduled, Completed" />
                    <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="SpecialRemarks" class="form-label fw-bold">Special Remarks</label>
                    <input asp-for="SpecialRemarks" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="TotalConsultedAmount" class="form-label fw-bold">Total Amount</label>
                    <input asp-for="TotalConsultedAmount" class="form-control" />
                    <span asp-validation-for="TotalConsultedAmount" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-bold">Created By (User)</label>
                    <select asp-for="UserID" asp-items="ViewBag.UserList" class="form-select">
                        <option value="">-- Select User --</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Modified" value="@DateTime.Now" />

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        @(Model.AppointmentID == null ? "Add Appointment" : "Update Appointment")
                    </button>
                    <a asp-action="AppointmentList" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
