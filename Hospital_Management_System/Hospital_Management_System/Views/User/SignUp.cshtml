                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email Address" required type="email" />
                    <i class="bi bi-envelope form-icon"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password" required type="password" />
                    <i class="bi bi-lock form-icon"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label fw-bold">Active</label>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        Create Account
                    </button>
                </div>

                <div class="text-center mt-4 form-text">
                    <a asp-action="Login" asp-controller="User">Already have an account? Sign In</a>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
